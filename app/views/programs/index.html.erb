<div class="index-prog">
  <div class="index-header">
    <div class="index-header-text">
      Finalise tous les programmes et assure toi d’avoir toutes les clés en main pour faire de ton aventure un véritable succès !
    </div>
    <%= image_tag "rocket-ship.png", alt: "alttext", class: "rocket-position" %>
  </div>
  <div class="index-card">
    <div class="index-grid">
      <!-- class index-grid is in programs.scss -->
      <% @programs_up.each do |program| %>
        <div class="card-progress-medal">
          <%= image_tag "medal.png", alt: "alttext", class: "medal"%>
          <div class="card-progress-header">
            <%= image_tag "messenger.png", alt: "alttext", class: "icon-position"%>
            <div class="card-progress-title">
              hello there. General Kenobi!
            </div>
          </div>
          <div class="card-progress-bar">
            <div class="d-flex flex-row justify-content-between align-items-center">
              <div class="d-block  w-100">
                <div class="progress" style="height: 10px">
                  <div class="progress-bar purple-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
                </div>
              </div>
              <div class="d-flex ml-1" style="font-size: 20px; white-space: nowrap;"><span>100%</span></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<h1>Programs#index</h1>
<p>Find me in app/views/programs/index.html.erb</p>
<% @programs_up.each do |program_up| %>
  <p><%= program_up.first.title %></p>
  <% if program_up.last.present? %>
    <%= program_up.last.status %>
  <% end %>
<% end %>
