<%= link_to program_path(program) do %>
  <div class="card-progress">
    <div class="card-progress-header">
      <%= image_tag "messenger.png", alt: "alttext", class: "icon-position"%>
      <div class="card-progress-title">
        <p><%= program.title %></p>
      </div>
    </div>
    <div class="card-progress-bar">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="d-block  w-100">
          <div class="progress" style="height: 10px">
            <div class="progress-bar dark-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: <%= program.completion(current_user) %>%;"></div>
          </div>
        </div>
        <div class="d-flex ml-1" style="font-size: 16px; white-space: nowrap;"><span><%= program.completion(current_user) %>%</span></div>
      </div>
    </div>
  </div>
<% end %>
